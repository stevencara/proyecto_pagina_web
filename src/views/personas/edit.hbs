<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Editar producto</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.id}}" method="post" enctype="multipart/form-data">

                        <div class="input-group mt-2">
                            <input class="form-control text-center text-uppercase fw-bold" type="text" name="producto"
                                id="producto" value="{{persona.producto}}" readonly autofocus required>
                        </div>

                        <div class="input-group mt-2">
                            <textarea class="form-control custom-textarea" name="descripcion" id="descripcion"
                                readonly>{{persona.descripcion}}</textarea>
                        </div>

                        <div class="input-group mt-2">
                            <label for="precio" class="input-group-text">Precio</label>
                            <input class="form-control text-end" type="number" name="precio" id="precio"
                                value="{{persona.precio}}" readonly autofocus required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="cantidad" class="input-group-text">Cantidad</label>
                            <input class="form-control text-end" type="number" name="cantidad" id="cantidad"
                                value="{{persona.cantidad}}" min="1" max="10" required>
                        </div>

                        <!--<div class="input-group mt-2">
                            <input class="form-control" type="file" name="file" id="file">
                        </div>

                        {{#if persona.imagen}}
                        <div class="input-group mt-2">
                            <img src="/uploads/{{persona.imagen}}" style="width: 150px; height: 150px; display:block" class="card-img-top mx-auto m-2 rounded-circle">
                        </div>
                        {{/if}}-->


                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Actualizar</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>